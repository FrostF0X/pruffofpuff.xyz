generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NFT {
  id            Int      @id @default(autoincrement())
  identifier    String   @unique
  partnerName   String
  puffs         String[]
  imageUrl      String
  privateKey    String
  redeemed       Boolean  @default(false)  // Field for redemption status
  discord       String?  // Nullable field
  telegram      String?  // Nullable field
  farcaster     String?  // Nullable field
  github        String?  // Nullable field
  username      String?  // Nullable field
  firstName     String?  // Nullable field
  lastName      String?  // Nullable field
  jobTitle      String?  // Nullable field
  tshirtSize    String?  // Nullable field
  ownerAddress  String?  // Field to store the new NFT owner's Ethereum address (nullable initially)
}
